<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.EditProfileActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/ui_10_dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.applutions.t2y.customViews.RegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/themeLight"
            android:textSize="@dimen/text_12_sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/ui_20_dp"/>
        <com.applutions.t2y.customViews.BoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello You"
            android:textColor="@color/themeDark"
            android:textSize="@dimen/text_22_sp"
            android:gravity="center_horizontal"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/ui_100_dp"
            android:layout_height="@dimen/ui_100_dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ui_20_dp"
            android:src="@color/shimmerColor"/>
        <EditText
            android:id="@+id/fullnameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/complete_gray_edittext_round_background"
            android:focusableInTouchMode="true"
            android:hint="Full NAME"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="14dp"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="8dp"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/emailET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/complete_gray_edittext_round_background"
            android:focusableInTouchMode="true"
            android:hint="EMAIL"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="8dp"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/mobileNumberET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/complete_gray_edittext_round_background"
            android:focusableInTouchMode="true"
            android:hint="MOBILE"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:padding="8dp"
            android:textSize="14sp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="14dp"/>

        <EditText
            android:id="@+id/dobET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/complete_gray_edittext_round_background"
            android:focusableInTouchMode="true"
            android:hint="DATE OF BIRTH"
            android:imeOptions="actionNext"
            android:inputType="date"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="8dp"
            android:textSize="14sp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="14dp"/>

        <Button
            android:id="@+id/changePwdBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="@dimen/text_14_sp"
            android:textColor="@color/themeDark"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/grey_rounded_button"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="14dp">
            <Button
                android:id="@+id/verifyEmailBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify Email"
                android:textSize="@dimen/text_14_sp"
                android:textColor="@color/themeDark"
                android:layout_marginRight="5dp"
                android:background="@drawable/grey_rounded_button"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/verifyMobileBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify Mobile"
                android:textSize="@dimen/text_14_sp"
                android:textColor="@color/themeDark"
                android:layout_marginLeft="5dp"
                android:background="@drawable/grey_rounded_button"
                android:layout_weight="1"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="14dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ui_10_dp"
                android:orientation="vertical">
                <com.applutions.t2y.customViews.BoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Billing Address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12_sp"/>
                <com.applutions.t2y.customViews.BoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change your Address"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_12_sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLicense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="14dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgLicense"
                    android:layout_width="@dimen/ui_50_dp"
                    android:layout_height="@dimen/ui_50_dp"
                    android:src="@color/shimmerColor"
                    android:padding="@dimen/ui_10_dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/ui_10_dp"
                    android:orientation="vertical">
                    <com.applutions.t2y.customViews.BoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="License Details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12_sp"/>
                    <com.applutions.t2y.customViews.BoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Change your License Details"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_12_sp"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="14dp"
            android:padding="5dp">
            <Button
                android:id="@+id/saveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="@dimen/text_14_sp"
                android:textColor="@color/white"
                android:layout_marginEnd="5dp"
                android:background="@drawable/dark_rounded_button"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="@dimen/text_14_sp"
                android:textColor="@color/themeDark"
                android:layout_marginStart="5dp"
                android:background="@drawable/grey_rounded_button"
                android:elevation="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>