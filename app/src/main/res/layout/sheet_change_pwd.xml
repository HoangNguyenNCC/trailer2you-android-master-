<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_large_top_corner_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <com.applutions.t2y.customViews.BoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_20_dp"
            android:layout_marginRight="@dimen/ui_20_dp"
            android:layout_marginTop="@dimen/ui_20_dp"
            android:padding="4dp"
            android:text="Change Password"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_22_sp"/>
        <EditText
            android:id="@+id/edtoldPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/complete_gray_edittext_round_background"
            android:focusableInTouchMode="true"
            android:hint="Old Password"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="@dimen/ui_10_dp"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/ui_20_dp"
            android:layout_marginRight="@dimen/ui_20_dp"
            android:layout_marginTop="@dimen/ui_20_dp"
            />
        <EditText
            android:id="@+id/edtNewPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/complete_gray_edittext_round_background"
            android:focusableInTouchMode="true"
            android:hint="New Password"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="@dimen/ui_10_dp"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/ui_20_dp"
            android:layout_marginRight="@dimen/ui_20_dp"
            android:layout_marginTop="@dimen/ui_10_dp"
            />
        <EditText
            android:id="@+id/edtConfimPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/complete_gray_edittext_round_background"
            android:focusableInTouchMode="true"
            android:hint="Confirm Password"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="@dimen/ui_10_dp"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/ui_20_dp"
            android:layout_marginRight="@dimen/ui_20_dp"
            android:layout_marginTop="@dimen/ui_10_dp"
            />

        <com.applutions.t2y.customViews.RegularTextView
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_20_dp"
            android:layout_marginTop="@dimen/ui_10_dp"
            android:layout_marginRight="@dimen/ui_20_dp"
            android:background="@drawable/dark_rounded_button"
            android:padding="4dp"
            android:text="Save"
            android:textAlignment="center"
            android:textColor="@color/white" />
        <com.applutions.t2y.customViews.RegularTextView
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_20_dp"
            android:layout_marginRight="@dimen/ui_20_dp"
            android:layout_marginTop="@dimen/ui_10_dp"
            android:layout_marginBottom="@dimen/ui_10_dp"
            android:background="@drawable/all_rounded_grey_background"
            android:padding="4dp"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@color/black"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>