<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_large_top_corner_white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="VERIFY NUMBER"
            android:textColor="#0033BE"
            android:textSize="24sp"
            android:padding="@dimen/ui_8_dp"
            android:layout_gravity="center_horizontal"/>

        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            app:bar_active_color="@android:color/black"
            app:bar_enabled="true"
            app:bar_height="2dp"
            app:bar_inactive_color="@android:color/black"
            app:length="4"
            app:otp_box_background="@android:color/black"
            app:otp_text_size="24dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Enter The OTP Sent To Your Number"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintVertical_bias="1.0"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_reset_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Resend OTP"
            android:textColor="#002486"
            android:layout_gravity="center_horizontal"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.16" />

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/btn_confirm_number"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="18dp"
            android:text="Confirm Number"
            app:finalCornerAngle="50dp"
            app:initialCornerAngle="0dp"
            app:spinning_bar_color="#FFFFFF"
            app:spinning_bar_padding="0dp"
            app:spinning_bar_width="3dp" />
        <com.applutions.t2y.customViews.RegularTextView
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_20_dp"
            android:layout_marginRight="@dimen/ui_20_dp"
            android:layout_marginTop="@dimen/ui_10_dp"
            android:layout_marginBottom="@dimen/ui_10_dp"
            android:background="@drawable/all_rounded_grey_background"
            android:padding="4dp"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@color/black"/>

</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>