<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="8dp">

    <ImageView
        android:id="@+id/upsell_item_image"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:src="@color/shimmerColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/upsell_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ui_20_dp"
        android:layout_marginTop="@dimen/ui_10_dp"
        android:text="Vinyl Case Covers"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upsell_item_image" />

    <TextView
        android:id="@+id/upsell_item_descrition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/ui_12_dp"
        android:layout_marginEnd="20dp"
        android:textSize="14sp"
        android:text="Search Results Featured snippet from the web A trailer is a container on wheels which is pulled by a car or other vehicle and which is used for transporting large or heavy items. A trailer is the long rear section of a lorry or truck, in which the goods are carried."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upsell_item_name" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Item Cost"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:textColor="@color/light_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upsell_item_descrition" />

    <TextView
        android:id="@+id/upsell_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="46.81 AUD"
        android:textColor="@color/themeDark"
        android:textSize="@dimen/text_18_sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt" />

    <Button
        android:id="@+id/upsell_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_5_dp"
        android:background="@drawable/dark_rounded_button"
        android:paddingStart="@dimen/ui_20_dp"
        android:paddingTop="@dimen/ui_8_dp"
        android:paddingEnd="@dimen/ui_20_dp"
        android:paddingBottom="@dimen/ui_8_dp"
        android:text="Add"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/upsell_item_price"
        app:layout_constraintTop_toBottomOf="@id/upsell_item_price" />

</androidx.constraintlayout.widget.ConstraintLayout>