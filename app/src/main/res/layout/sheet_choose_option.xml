<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.applutions.t2y.customViews.RegularTextView
            android:id="@+id/btnViewDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_20_dp"
            android:layout_marginRight="@dimen/ui_20_dp"
            android:layout_marginTop="@dimen/ui_10_dp"

            android:background="@drawable/rounded_white_small_corner_gray"
            android:padding="8dp"
            android:text="View Details"
            android:textAlignment="center"
            android:textColor="@color/themeDark"/>
        <com.applutions.t2y.customViews.RegularTextView
            android:id="@+id/btnStartTracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_20_dp"
            android:layout_marginRight="@dimen/ui_20_dp"
            android:layout_marginTop="@dimen/ui_10_dp"

            android:background="@drawable/rounded_white_small_corner_gray"
            android:padding="8dp"
            android:text="Start Tracking"
            android:textAlignment="center"
            android:textColor="@color/themeDark"/>
        <com.applutions.t2y.customViews.RegularTextView
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_20_dp"
            android:layout_marginRight="@dimen/ui_20_dp"
            android:layout_marginTop="@dimen/ui_10_dp"
            android:layout_marginBottom="@dimen/ui_10_dp"
            android:background="@drawable/rounded_white_small_corner_gray"
            android:padding="8dp"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@color/black"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>